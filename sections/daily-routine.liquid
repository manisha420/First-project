           {{ section.settings.ab_content3 }}
          </div>
        </div>
      </div>
    </div>
  </div>
    
    <div class="row">
      <div class="col-md-12">
       <div class="about_product_content">

         <div class="about_product_refrence">
           <h4>{{ section.settings.ab_head_5}}</h4>
           <ol class="refrence_list">
             {% for block in section.blocks %}
            {% case block.type %}
              {% when 'references_list' %}
              {% if block.settings.li_link == blank %}
             <li>{{ block.settings.li_text }}</li>
             {% else %}
                <li><a target="_blank" href="{{ block.settings.li_link}}">{{ block.settings.li_text }}</a></li>
             {% endif %}
               {% endcase %}
              {% endfor %}
           </ol>
         </div>
        </div>
      </div>
    </div>
  </div>
</section>

