
<section class="about_product_main daily_routine">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="about_product_content">
          <div class="about_product_head">
            <h2>{{ section.settings.product_head }}</h2>
           {{ section.settings.ab_content }}
          </div>
        </div>
        <div class="about_product_content">
