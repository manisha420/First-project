<section class="signup-banner collection_banner">
  <div class="signup-banner-img">
   <img class="only_desktop_screen" src="{{section.settings.image |img_url:'master'}}" alt=""/> 
    <img  class="only_mobile_screen" src="{{section.settings.mobile_image |img_url:'master'}}" alt=""/> 
  </div>
  <div class="signup-banner-cont">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="signup-banner-content">
            <h2>{{section.settings.heading}}</h2>
            <p>{{section.settings.content}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Collection Banner",
    "settings": [
 { 
      "type": "image_picker",
      "id": "image",
      "label": "Desktop Image" 
  },
      { 
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image" 
  },
{ 
      "type": "text",
      "id": "heading",
      "label": "heading",
      "default": "heading"
},
{ 
      "type": "text",
      "id": "content",
      "label": "Content"
}

],
"presets": [
    {
      "category": "Collection Banner",
      "name": "Collection Banner",
      "settings": {}
    }
  ]
  }
{% endschema %}

