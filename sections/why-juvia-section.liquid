<section class="why_juvia_section home-page-launching">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="why_juvia_content">
          <h2>{{ section.settings.heading }}</h2>
        {{ section.settings.content }}
        </div>
      </div>
      <div class="col-md-6">
         <div class="why_juvia_image">
             <img src="{{section.settings.right_image | img_url:'master'}}" alt=""/>
        </div>
      </div>
    </div>
  </div>
  <div class="grey-tri">
     <img src="{{section.settings.arrow_image |img_url:'master'}}" alt=""/>
  </div>
</section>

{% schema %}
  {
    "name": "Why Juvia Section",
    "settings": [
      { 
          "type": "text",
          "id": "heading",
          "label": "heading",
          "default": "heading"
    },
     { 
          "type": "richtext",
          "id": "content",
          "label": "content"
      
    }, 
  { 
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Image" 
  }, 

{ 
      "type": "image_picker",
      "id": "arrow_image",
      "label": "Image" 
  }
],
"presets": [
    {
      "category": "Why Juvia Section",
      "name": "Why Juvia Section",
      "settings": {}
    }
  ]
  }
{% endschema %}

