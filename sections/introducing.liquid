<section id="introducing-juvia" class="introducing-part-main">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="introducing-image-part">
           {% for block in section.blocks %}  
          <div class="introducing-image-section">
            <div class="row">
            <div class="col-md-6">
              <div class="introducing-box-section">
                <div class="introducing_img">
              <img src="{{block.settings.intro_image | img_url:'master'}}" alt=""/>
                </div>
                <div class="introducing_content">
                <h3>{{block.settings.heading_one}}</h3>
                <p>{{block.settings.Subheading_one}}</p>
                </div>
              </div>
              </div>
            <div class="col-md-6">
            <div class="introducing-box-section">
              <div class="introducing_img">
             <img src="{{block.settings.intro_image_two | img_url:'master'}}" alt=""/>
              </div>
              <div class="introducing_content">
                <h3> {{block.settings.heading_two}}</h3>
                <p>{{block.settings.subheading_two}}</p>
              </div>
              </div>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
      <div class="col-md-6">
        <div class="introducing-part-content">
          <h2>{{section.settings.heading}} </h2>
          <h4>{{section.settings.subheading}}</h4>
          <p>{{section.settings.content}} </p>
          <p>{{section.settings.content_two}}</p>
          <p>{{section.settings.content_three}}</p>
          <p>{{section.settings.content_four}}</p>
        </div>
      </div>
    </div>
  </div>
</section>


