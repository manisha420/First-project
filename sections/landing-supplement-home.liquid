<section class="new-suppliment-main cust-home-suppliment">
  <div class="container">
    <div class="row">
      <div class="new-suppliment-heading text-center">
      	<h2>{{section.settings.heading}}</h2>
      </div>
      <div class="col-md-6 text-center">
        <div class="new-suppliment-image-part">
        {% assign prodctcst = all_products[section.settings.select_product] %}
          <img src="{{ prodctcst.featured_image | product_img_url: 'master' }}" alt="">
                <h3 class="menu_heading">{{ prodctcst.title}}</h3>
                <h4 class="menu_price">From Â£39.00 for 2 bottles</h4>
              <a class="view_prod_url" href="{{prodctcst.url}}">View product</a>
        </div>
      </div>
      <div class="col-md-6">
        <div class="new-suppliment-content">
            {% for block in section.blocks %}  
          <div class="new-suppli-listing">
            <div class="suppli-listing-img">
                <img src="{{block.settings.icon_image | img_url:'master'}}" alt=""/>
             
            </div>
            <div class="suppli-listing-cont">
              <p>{{block.settings.heading_one}}</p>
            </div>
          </div>
           {% endfor %}
        </div>
      </div>
      <div class="grey-tri">
       <img src="{{section.settings.arrow_image |img_url:'master'}}" alt=""/>
      </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Landing Supplements Home",
    "settings": [
{ 
      "type": "text",
      "id": "heading",
      "label": "heading",
      "default": "Heading"
},
{ 
      "type": "image_picker",
      "id": "arrow_image",
      "label": "Image" 
  },
{ 
      "type": "product",
      "id": "select_product",
      "label": "Select product" 
  }

],
 "blocks": [
    {
      "type": "image",
      "name": "image",
      "settings": [
    { 
      "type": "image_picker",
      "id": "icon_image",
      "label": "Intro Image" 
  }, 
{ 
      "type": "text",
      "id": "heading_one",
      "label": "heading",
      "default": "heading"
}

]
}
],
"presets": [
    {
      "category": "Landing Supplements Home",
      "name": "Landing Supplements Home",
      "settings": {}
    }
  ]
  }
{% endschema %}

